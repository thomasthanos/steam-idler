{
  "name": "souvlatzidiko-unlocker",
  "version": "1.0.6",
  "description": "A modern Steam Achievement Manager built with Electron, React & TypeScript",
  "author": "ThomasThanos",
  "main": "dist/main/main/index.js",
  "scripts": {
    "ship": "npm run build:main && npm run build:renderer && npm run package",
    "dev": "npm run build:main && concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:electron": "wait-on http://localhost:3000 && electron dist/main/main/index.js",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "electron": "electron dist/main/main/index.js",
    "start": "npm run build && npm run electron",
    "package": "npm run build && electron-builder",
    "release": "npm run build:main && npm run build:renderer && npm run package",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.8.3",
    "steamworks.js": "^0.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "clsx": "^2.0.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.294.0",
    "postcss": "^8.4.32",
    "rcedit": "^5.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  }
}
